<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
	    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
	    <table class='table'>
	      <tr>
	      	<p><%= image_tag @user.get_profile_image(100,100) %></p>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>  <!-- 固定値 -->
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>  <!-- 固定値 -->
	      </tr>
	    </table>
	    <div class='row'>
	      <!-- 編集リンクが未実装 -->
	      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block edit_user_path" do %>
	       <i class="fa-solid fa-user-gear"></i>
	      <% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
	    <%= form_with model:@book, url:'/books', method: :post do |f| %>
	    	<%= f.label :title %><br />
	    	<%= f.text_field :title %><br />
	    	<%= f.label :body %><br />
	    	<%= f.text_field :body %>
	    	<%= f.submit 'Create Book' %>
	    <% end %>

	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Users</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <% if @book.errors.any? %>
		<%= @book.errors.count %>件のエラーが発生しました
		<ul>
		<% @book.errors.full_messages.each do |message| %>
    	<li><%= message %></li>
    	<% end %>
		</ul>
		<% end %>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th>image</th>
	          <th>name</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
	      	<% @users.each do |user| %>
	      	<tr>
	      		<td>
	      			<p><%= image_tag user.get_profile_image(100,100) %></p>
	      		</td>
	      		<td>
	      			<%= user.name %>
	      		</td>
	      		<td>
	      			<%= link_to "Show", user_path(user.id) %>
	      		</td>
	      	</tr>
	      </tbody>
	      	<% end %>
	    </table>
	  </div>
	</div>
</div>