<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>

<div>
<%= flash[:notice] %>
</div>

  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
      </ul>
  <% end %>

  <label for="inputName">Name</label><br />
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br />

  <label for="inputImage">ProfileImage</label><br />
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br />

  <label for="inputName">Introduction</label><br />
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:""%><br />

  <%= f.submit "Update User" %>

<% end %>