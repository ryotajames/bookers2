<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
	    <table class='table'>
	      <tr>
	      	<p><%= image_tag @user.get_profile_image(100,100) %></p>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>  <!-- 固定値 -->
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>  <!-- 固定値 -->
	      </tr>
	    </table>
	    <div class='row'>
	      <div>
	      	<%= flash[:notice] %>
	      </div>
	    </div>

	    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_path" do %>
	       <i class="fa-solid fa-user-gear"></i>
	    <% end %>

	    <h2 class="mt-3">New book</h2>
	    <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
	    <%= form_with model:@book, url:'/books', method: :post do |f| %>
	    	<%= f.label :title %><br />
	    	<%= f.text_field :title %><br />
	    	<%= f.label :body %><br />
	    	<%= f.text_field :body %>
	    	<%= f.submit 'Create Book' %>
	    <% end %>

	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
	      	<% @books.each do |book| %>
	      	<tr>
	      		<td>
	      				<%= link_to user_path(book.user.id), class: "btn btn-link" do %>
								<i><%= image_tag(book.user.get_profile_image(80,80)) %></i><br />
								<i><%= @user.name %></i>
							<% end %>
							</td>
	      		<td><%= link_to book.title, book_path(book.id) %></td>
	      		<td><%= book.body %></td>
	      	</tr>
	      	<% end %>
	      </tbody>
	    </table>
	  </div>
	</div>
</div>